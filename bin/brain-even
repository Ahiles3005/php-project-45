#!/usr/bin/env php
<?php
require_once __DIR__ . '/../vendor/autoload.php';

use Hexlet\Code\Games\Even;

$even = new Even();
$even->hello();
for ($i = 0; $i < 3; $i++) {
    $even->dataGeneration();
    $status = $even->question();

    if ($status) {
        $even->printValidaMessage();
    } else {
        $even->printInValidaMessage();
        exit();
    }
}
$even->printEndText();